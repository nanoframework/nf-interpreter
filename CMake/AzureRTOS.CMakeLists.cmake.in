cmake_minimum_required(VERSION 3.15)

project(AzureRTOS-download NONE)

include(ExternalProject)

# download AzureRTOS source from official GitHub repo
ExternalProject_Add( 
    AzureRTOS
    PREFIX AzureRTOS
    SOURCE_DIR ${CMAKE_BINARY_DIR}/AzureRTOS_Source
    GIT_REPOSITORY https://github.com/azure-rtos/threadx.git
    GIT_TAG ${RTOS_VERSION}  # target specified branch
    GIT_SHALLOW 1   # download only the tip of the branch, not the complete history
    TIMEOUT 10
    LOG_DOWNLOAD 1
    # Disable all other steps
    INSTALL_COMMAND ""
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
)
