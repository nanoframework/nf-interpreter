project(STM32-CubePackage-download NONE)

include(ExternalProject)

# download STM32 Cube Package source from nanoFramework GitHub fork
ExternalProject_Add( 
    STM32_CubePackage
    PREFIX STM32_CubePackage
    SOURCE_DIR ${CMAKE_BINARY_DIR}/STM32_CubePackage_Source
    GIT_REPOSITORY  https://github.com/nanoframework/STM32Cube${CUBEPACKAGE_REPO}
    GIT_SHALLOW 1   # download only the tip of the branch, not the complete history
    TIMEOUT 10
    LOG_DOWNLOAD 1
    # Disable all other steps
    INSTALL_COMMAND ""
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
)
