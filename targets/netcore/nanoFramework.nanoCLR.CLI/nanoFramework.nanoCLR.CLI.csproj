<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Platforms>x64;x86</Platforms>
	  <RuntimeIdentifiers>win-x64;win-x86</RuntimeIdentifiers>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <OutputPath>..\..\..\build\bin\$(Configuration)</OutputPath>
  </PropertyGroup>

  <!-- NuGet package stuff -->
  <PropertyGroup>
    <PackageId>nanoFramework.nanoCLR.CLI</PackageId>
    <Authors>.NET nanoFramework project contributors</Authors>
    <Product>.NET nanoFramework CLR CLI</Product>
    <Copyright>Copyright (c) .NET Foundation and Contributors</Copyright>
    <Company>.NET nanoFramework</Company>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/nanoframework/nf-interpreter</RepositoryUrl>
    <PackageProjectUrl>https://github.com/nanoframework/nf-interpreter</PackageProjectUrl>
    <Description>.NET nanoFramework CLI that runs the nanoCLR as a virtual device.</Description>
    <!-- disable NuGet warning for DLLs outside the lib folder and for SemVer 2 package reference -->
    <NoWarn>$(NoWarn);NU5100;NU5105</NoWarn>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageIcon>images\nf-logo.png</PackageIcon>
    <PackageTags>nanoFramework, nano Framework, NETNF, NETMF, Micro Framework, .net</PackageTags>
    <PackageIconUrl />
  </PropertyGroup>

  <!-- NuGet package files -->
  <ItemGroup>
    <None Include="..\..\..\build\bin\$(Configuration)\nanoFramework.nanoCLR.Host.dll">
      <Pack>True</Pack>
      <PackagePath>lib\net5.0</PackagePath>
    </None>
    <None Include="..\..\..\build\bin\$(Configuration)\nanoFramework.nanoCLR.dll">
      <Pack>True</Pack>
      <PackagePath>lib\net5.0</PackagePath>
    </None>
    <None Include="..\..\..\assets\nf-logo.png">
      <Pack>True</Pack>
      <PackagePath>images</PackagePath>
    </None>
    <None Include="..\..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Remove="License\vspt.vsptlic" />
    <EmbeddedResource Include="License\vspt.vsptlic" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\nanoFramework.nanoCLR.Host\nanoFramework.nanoCLR.Host.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="hhdvspkit.interop, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>Vendor\hhdvspkit.interop.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.4.231" PrivateAssets="All" />
    <PackageReference Include="System.Security.Principal.Windows" Version="5.0.0" />
  </ItemGroup>

</Project>
