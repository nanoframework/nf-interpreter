{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ESP32",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "<absolute-path-to-the-esp32-toolchain-folder-mind-the-forward-slashes>/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb.exe",
            "stopAtEntry": true,
            "program": "${workspaceFolder}/build/nanoCLR.elf",
            "setupCommands": [
                {
                    "text": "set logging on"
                },
                {
                    "text": "target extended-remote localhost:3333"
                },
                {
                    "text": "set remote hardware-watchpoint-limit 2"
                },
                {
                    "text": "monitor reset halt"
                },
                {
                    "text": "flushregs"
                },
                {
                    "text": "thb app_main"
                },
                {
                    "text": "x $a1=0"
                }
            ],
            "launchCompleteCommand": "None",
            "debugServerPath": "<absolute-path-to-esp32-openocd-mind-the-forward-slashes>/bin/openocd.exe",
            "debugServerArgs": "-c \"set ESP_RTOS none\" -s \"<absolute-path-to-esp32-openocd-mind-the-forward-slashes>/share/openocd/scripts/\" -f interface/ftdi/esp32_devkitj_v1.cfg -f target/esp32.cfg -c \"adapter_khz 2000\" ",
            "serverStarted": "Info : .*Tensilica.*0x1.",
            "filterStderr": true,
            "externalConsole": true,
            "cwd": "${cwd}",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true,
                "moduleLoad": true
            }
        },
